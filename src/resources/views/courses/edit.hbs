<div class="mt-5">
    <h1 class="text-center">Chỉnh sửa khóa học</h1>
</div>
<div class="mt-5 d-flex justify-content-center">
    <div class="w-50">
        <form method="post" action="/courses/{{course._id}}?_method=PUT">
            <div class="mb-3">
                <label for="name" class="form-label">Tên khóa học</label>
                <input type="text" name="name" class="form-control" id="name" value="{{course.name}}">
            </div>
            <div class="mb-3">
                <label for="description" class="form-label">Mô tả</label>
                <input type="text" name="description" class="form-control" id="description" value="{{course.description}}">
            </div>
            <div class="mb-3">
                <label for="image" class="form-label">Hình ảnh</label>
                <input type="text" name="image" class="form-control" id="image" value="{{course.image}}">
            </div>
            <div class="mb-3">
                <label for="videoId" class="form-label">Video id</label>
                <input type="text" name="videoId" class="form-control" id="videoId" value="{{course.videoId}}">
            </div>
            <div class="mb-5">
                <label for="level" class="form-label">Level</label>
                <input type="text" name="level" class="form-control" id="level" value="{{course.level}}">
            </div>
            <button type="submit" class="btn btn-primary">Cập nhật khóa học</button>
        </form>
    </div>
</div>