<div class="mt-5">
    <h1 class="text-center">Trang chủ</h1>
</div>
<div class="mt-5">
    <div class="row">
        {{#each courses}}
        <div class="col-sm-6 col-lg-3 mb-3">
            <div class="card" style="width: 100%;">
                <a href="/courses/{{this.slug}}">
                    <img src="{{this.image}}" class="card-img-top" alt="{{this.name}}" style="margin">
                </a>
                <div class="card-body">
                    <a href="/courses/{{this.slug}}" style="text-decoration:none; color: black">
                        <h5 class="card-title">{{this.name}}</h5>
                    </a>
                    <p class="card-text" style="overflow: hidden; display: -webkit-box; -webkit-line-clamp: 3; -webkit-box-orient: vertical;">{{this.description}}</p>
                    <a href="#" class="btn btn-primary">Mua khóa học</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>